
{% if devices[inventory_hostname].vlan is defined %}
vlans {
{% if devices[inventory_hostname].vlan is defined %}
{% for vlan, vlan_val in devices[inventory_hostname].vlan.items() %}
    {{ vlan }} {
        description "VLAN {{ vlan_val.description }}";
        vlan-id {{ vlan_val.vlanid }};
{% if vlan_val.l3vlanid is defined %}
        l3-interface irb.2250;
{% endif %}
    } {% endfor %} {% endif %}
}
{% endif %}
